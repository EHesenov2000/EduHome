@using EduHome.Models
@{
    ViewData["Title"] = "GetCourses";
}
@model List<Request>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (Model != null)
{
    @foreach (var item in Model)
    {
        <div class="d-flex">Kursun kategoriyasi:<h3 style="font:bold;"> @item.Course.Category.Name</h3></div>
        <div class="d-flex">Request tarixi:<h3 style="font:bold;">@item.RequestDate.ToString(" dd MMMM yyyy HH:mm ")</h3></div>
        <div class="d-flex">Kursun request satusu:<h3 style="font:bold;"> @item.Status</h3></div>
        if (item.Status == 0)//pending
        {
            <a class="btn btn-primary" asp-action="rejectcourse" asp-controller="course" asp-route-courseId="@item.CourseId" asp-route-userId="@item.AppUserId">Reject</a>
        }
        <hr />
    }
}


