@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using EduHome.Models
@model Setting
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row d-flex justify-content-end mb-2">
        <div class="col-md-1 m-3">
            <a asp-action="create" class="d-flex m-3" style="text-decoration:none;">
                <button class="backendButton px-4 py-2 mr--30" style=" border-radius: 20px; color: white; background-image: linear-gradient(to right,blue,red); font: bold; ">CREATE</button>
            </a>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-2">Question Number</th>
                <th class="col-md-3">Address</th>
                <th class="col-md-2">Mail</th>
                <th class="col-md-2">Website</th>
                <th class="col-md-2"></th>
            </tr>
        </thead>
        <tbody>
            <tr class="row">
                <td class="col-md-1">1</td>
                <td class="col-md-2">@Model.QuestionNumber</td>
                <td class="col-md-3">@Model.Address</td>
                <td class="col-md-2">@Model.Mail</td>
                <td class="col-md-2">@Model.WebSite</td>
                <td class="col-md-2">
                    <a class="btn btn-warning w-75" asp-action="edit" asp-route-id="@Model.Id">Edit</a>
                    @*<a class="btn btn-info delete-btn" asp-action="delete" asp-route-id="@Model.Id">Delete</a>*@
                </td>
            </tr>
        </tbody>
    </table>
</div>
<style>
    .backendButton:hover {
        background-image: linear-gradient(to right,red,blue) !important;
    }
</style>

