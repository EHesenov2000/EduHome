@using EduHome.Models
@using EduHome.Enums
@model Request
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-header row">
            <div class="col-md-6">
                @Model.UserName  -  @Model.RequestDate.ToString("HH:mm - dd MMMM yyyy")
            </div>
            <div class="col-md-6">
                <form method="post" asp-action="changestatus">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Author</label>
                            <select asp-for="@Model.Status" class="form-control" asp-items="@new  SelectList(Enum.GetNames(typeof(EduHome.Enums.RequestStatus)))">
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Set status</button>
                    </div>
                </form>
            </div>

        </div>
        <div class="card-body">
            <p class="card-text">Total amount: @Model.TotalPrice</p>
        </div>
    </div>

    <div class="row">

            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Category: @Model.Course.Category.Name</h5>
                        <p class="card-text">UserName: @Model.UserName</p>
                        <p class="card-text">Price: @Model.TotalPrice</p>
                        <p class="card-text">Phone: @Model.ContactPhone</p>
                        <p class="card-text">Address: @Model.Address</p>
                    </div>
                </div>
            </div>

    </div>

</div>


