@using EduHome.Models
@model Slider
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Title">Title</label>
            <input type="text" asp-for="@Model.Title" class="form-control" id="title" placeholder="Title">
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Context">Context</label>
            <textarea asp-for="@Model.Context" class="form-control" id="Subtitle" rows="3"></textarea>
            <span asp-validation-for="@Model.Context" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.BackgroundFile">BackgroundImage</label>
            <input asp-for="@Model.BackgroundFile" class="form-control col-md-2" rows="3"></input>
            <span asp-validation-for="@Model.BackgroundFile" class="text-danger"></span>
        </div>
        <div class="img-box" style="position:relative;max-width:200px;background-color:black;width:200px;height:200px;max-height:200px;">
            <img class="d-block" src="~/uploads/slider/@Model.BackgroundImage" style="max-width:180px;width:180px;height:180px;max-height:180px;margin-left:10px;padding-top:20px" />
            <i class="fas fa-times remove-img-box" style="color:red;position:absolute;cursor:pointer;right:4px;top:2px;font-size:17px"></i>
            <input type="hidden" name="BackgroundImage" value="@Model.BackgroundImage" />
        </div>
        <div class="form-group mt-2">
            <label asp-for="@Model.OverFile">OverImage</label>
            <input asp-for="@Model.OverFile" class="form-control col-md-2" rows="3"></input>
            <span asp-validation-for="@Model.OverFile" class="text-danger"></span>
        </div>
        <div class="img-box" style="position:relative;max-width:200px;background-color:black;width:200px;height:200px;max-height:200px;">
            <img class="d-block" src="~/uploads/slider/@Model.OverImage" style="max-width:180px;width:180px;height:180px;max-height:180px;margin-left:10px;padding-top:20px" />
            <i class="fas fa-times remove-img-box" style="color:red;position:absolute;cursor:pointer;right:4px;top:2px;font-size:17px"></i>
            <input type="hidden" name="OverImage" value="@Model.OverImage" />
        </div>       
        <button type="submit" class="btn btn-primary m-3">Submit</button>
    </form>

</div>

@section Scripts{

    <script>
        $(document).ready(function () {

            $(document).on("click", ".remove-img-box", function (e) {
                $(this).parents(".img-box").attr("style", "background-color:unset");
                $(this).parents(".img-box").empty();
            })
        })
    </script>

}