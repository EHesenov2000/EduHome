@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using EduHome.Models
@model Testimonial
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.FullName">FullName</label>
            <input type="text" asp-for="@Model.FullName" class="form-control" id="FullName" placeholder="FullName">
            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Position">Position</label>
            <input type="text" asp-for="@Model.Position" class="form-control" id="Position" placeholder="Position">
            <span asp-validation-for="@Model.Position" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Text">Text</label>
            <textarea asp-for="@Model.Text" class="form-control" id="Text" rows="3"></textarea>
            <span asp-validation-for="@Model.Text" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ImageFile">Image</label>
            <input asp-for="@Model.ImageFile" class="form-control col-md-2" rows="3"></input>
            <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
